<div class="container pt-5">
    <!-- Subject Header -->
    <div class="row justify-content-center mb-3">
        <div class="col-sm-10">
            <div class="accordion" id="accordionExample">
                <div class="accordion-item rounded-0">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed rounded-0" type="button" data-bs-toggle="collapse"
                            data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                            New Student
                        </button>
                    </h2>
                    <div id="collapseTwo" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
                        <div class="accordion-body rounded-0">
                            <div class="mb-3">
                                <label for="faculty" class="form-label mb-0">Full name</label>
                                <input type="text" class="form-control rounded-0" id="student" placeholder="e.g Saif Aleslam Kamal">
                            </div>
                           
                            <div class="mb-3">
                                <label for="faculty" class="form-label mb-0">Faculty</label>
                                <select class="form-select rounded-0" id="faculty" aria-label="Default select example">
                                    
                                    
                                </select>
                            </div>
                            <div class="mb-3">
                                <label for="level" class="form-label mb-0">Level</label>
                                <select class="form-select rounded-0" id="level" aria-label="Default select example">
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                    <option value="4">4</option>
                                    <option value="5">5</option>
                                    <option value="6">6</option>
                                </select>
                            </div>
                            <div class="mb-3">
                                <label for="semester" class="form-label mb-0">Semester</label>
                                <select class="form-select rounded-0" id="semester" aria-label="Default select example">
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                    <option value="4">4</option>
                                    <option value="5">5</option>
                                    <option value="6">6</option>
                                    <option value="7">7</option>
                                    <option value="8">8</option>
                                    <option value="9">9</option>
                                    <option value="10">10</option>
                                    <option value="11">11</option>
                                    <option value="12">12</option>
                                </select>
                            </div>
                            <div class="mb-3">
                                <button type="button" class="btn btn-info rounded-0" id="save-student">Save</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <div class="row justify-content-center">
        <div class="col-sm-10">
            <h5>All Subjects</h5>
        </div>
    </div>
    <!-- Subjects Table -->
    <div class="row justify-content-center">
        <div class="col-sm-10">
            <table class="table table-hover table-bordered">
                <thead class="table-primary">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Code</th>
                        <th scope="col">Faculty</th>
                        <th scope="col">Level</th>
                        <th scope="col">Semester</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody id="student-tbody">
                    
                </tbody>
            </table>
            <h6 class="text-center" id="no-msg"></h6>
        </div>
    </div>
</div>
<script src="/javascripts/student.js"></script>